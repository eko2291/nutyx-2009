# Description: Outil pour la copie de CD pour GNOME
# URL: http://www.burtonini.com/blog/computers/sound-juicer/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: libmusicbrainz, libgnomeui, gst-plugins-base, gst-plugins-bad, gst-plugins-ugly, gst-plugins-good, gnome-doc-utils, nautilus-cd-burner, gnome-media, brasero

name=sound-juicer
version=2.28.2
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
		--sysconfdir=/etc \
		--disable-scrollkeeper \
		--disable-schemas-install
	make
	make DESTDIR=$PKG install
}
